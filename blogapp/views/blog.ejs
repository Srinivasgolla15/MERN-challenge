<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
        <title> Blog</title>
</head>

<body>
    <%- include('partials/nav') %>
        <div class="container">
            <h1>
                <%=blog.title%>
            </h1>

            <div class=" d-flex align-items-center gap-4 mt-3 object">
                <img src="<%=blog.coverImageURL%>" class="card-img-top rounded-3 "
                    style="height:20rem;width:20rem;object-fit:cover;" />
                <div class="author ms-auto"><img src="<%=blog.createdBy.profilePic%> " width="100px">
                    <div>
                        <h5 class="mb-0">
                            <%= blog.createdBy.fullName %>
                        </h5>
                        <small class="text-muted">Author</small>
                    </div>
                </div>


            </div>
            <pre class="mt-3"><%=blog.body%></pre>
        </div>

        <% if (user && blog.createdBy._id.toString()===user._id.toString()) { %>
            <form method="POST" action="/blog/<%= blog._id %>?_method=DELETE">
                <button class="btn btn-danger">Delete</button>
            </form>
            <% } %>


                <%- include('partials/script') %>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
        <title> Blog</title>
</head>

<body>
    <%- include('partials/nav') %>
        <div class="container">
            <h1>
                <%=blog.title%>
            </h1>
            <img src="<%=blog.coverImageURL%>" class="card-img-top rounded-3 " style="height:20rem;width:20rem" />
            <pre class="mt-3"><%=blog.body%></pre>
        </div>

        <% if (user && blog.createdBy.toString()===user._id.toString()) { %>
            <form method="POST" action="/blog/<%= blog._id %>?_method=DELETE">
                <button class="btn btn-danger">Delete</button>
            </form>
            <% } %>


                <%- include('partials/script') %>
</body>

</html>
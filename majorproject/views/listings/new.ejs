<%layout("/layouts/boilerplate")%>

    <body>
        <br> 
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Create A New Listing</h3>
                <form method="POST" action="/listings">
                    <div class="mt-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="enter title" type="text" class="form-control">
                    </div>
                    <div class="mt-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="enter description"
                            class="form-control"></textarea>
                    </div>

                    <div class="mt-3">
                        <label for="image" class="form-label">Image</label>
                        <input name="listing[image][url]" placeholder="enter url/link" type="text" class="form-control">
                    </div>

                    <div class="row ">
                        <div class="mt-3 col-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="enter price" type="number" class="form-control">
                        </div>
                        <div class="mt-3 col-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="enter Country" type="text" class="form-control">
                        </div>
                    </div>


                    <div class="mt-3">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[Location]" placeholder="enter Location" type="text" class="form-control">
                    </div>

                    <br>
                    <button class="btn btn-danger">Add</button>
                    <br><br>
                </form>
            </div>
        </div>
        
    </body>
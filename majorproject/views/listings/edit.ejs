 <%layout("/layouts/boilerplate")%>
<body>
   <div class="row">
            <div class="col-8 offset-2">
                <h3>Edit This Listing</h3>
                <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
                    <div class="mt-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" value="<%=listing.title%>">
                    </div>
                    <div class="mt-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="enter description"
                            class="form-control"><%=listing.description%></textarea>
                    </div>

                    <div class="mt-3">
                        <label for="image" class="form-label">Image</label>
                        <input name="listing[image][url]" placeholder="enter url/link" type="text" class="form-control" value="<%=listing.image.url%>" >
                    </div>

                    <div class="row ">
                        <div class="mt-3 col-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="enter price" type="number" class="form-control" value="<%=listing.price %>">
                        </div>
                        <div class="mt-3 col-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="enter Country" type="text" class="form-control" value="<%=listing.country%>">
                        </div>
                    </div>


                    <div class="mt-3">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="enter Location" type="text" class="form-control" value="<%=listing.location%>">
                    </div>

                    <br>
                    <button class="btn btn-danger">Edit</button>
                    <br><br>
                </form>
            </div>
        </div>
</body>

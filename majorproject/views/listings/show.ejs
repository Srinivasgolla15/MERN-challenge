<% layout("/layouts/boilerplate") %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-8">

        <!-- Listing Details -->
        <h3 class="mb-3">
          <%= listing.title %>
        </h3>

        <div class="card shadow rounded-3 p-2 mb-4">
          <img src="<%= listing.image.url %>" class="card-img-top rounded-3" style="height: 25rem; object-fit: cover;"
            alt="listing image">
          <div class="card-body p-4">
            <h5 class="card-title">
              <%= listing.title %>
            </h5>
            <p class="card-text">
              <%= listing.description %>
            </p>
            <p class="text-muted mb-1">
              <%= listing.location %>, <%= listing.country %>
            </p>
            <p class="fw-bold fs-5">â‚¹ <%= listing.price.toLocaleString("en-IN") %>
            </p>
          </div>
        </div>

        <!-- Edit/Delete Buttons -->
        <div class="d-flex gap-3 mb-4">
          <form method="GET" action="/listings/<%= listing._id %>/edit">
            <button class="btn btn-danger">Edit</button>
          </form>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark">Delete</button>
          </form>
        </div>

        <!-- Leave a Review Form -->
        <div class="mb-5">
          <hr />
          <h4>Leave a Review</h4>
          <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
              <label for="rating" class="form-label">Rating</label>
              <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
            </div>
            <div class="mb-3 mt-3">
              <label for="comment" class="form-label">Comment</label>
              <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
              <div class="invalid-feedback">
                Please add a comment.
              </div>
            </div>
            <button type="submit" class="btn btn-outline-dark">Submit</button>
          </form>
        </div>

        <!-- Display All Reviews -->
        <div class="mb-5">
          <hr />
          <h4>All Reviews</h4>

          <% if (listing.reviews && listing.reviews.length> 0) { %>
            <div class="list-group">
              <% listing.reviews.forEach(review=> { %>
                <div class="list-group-item mb-2 shadow-sm rounded p-3">

                  <!-- Top Row: Stars + Date -->
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="stars text-warning">
                      <% for(let i=1; i <=5; i++) { %>
                        <% if(i <=review.rating) { %>
                          <i class="fa-solid fa-star"></i>
                          <% } else { %>
                            <i class="fa-regular fa-star"></i>
                            <% } %>
                              <% } %>
                    </div>

                    <small class="text-muted">
                      <%= review.createdAt ? new Date(review.createdAt).toLocaleDateString("en-IN", { day:"numeric",
                        month:"short", year:"numeric" }) : "" %>
                    </small>
                  </div>

                  <!-- Bottom Row: Comment + Delete -->
                  <div class="d-flex justify-content-between align-items-start">

                    <!-- Comment -->
                    <p class="mb-0">
                      <%= review.comment %>
                    </p>

                    <!-- Delete Button -->
                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                      <button class="btn btn-sm btn-outline-danger ms-3">
                        <i class="fa-solid fa-trash"></i>
                      </button>
                    </form>

                  </div>

                </div>

                <% }) %>

            </div>
            <% } else { %>
              <p class="text-muted">No reviews yet. Be the first!</p>
              <% } %>

        </div>

      </div>
    </div>
  </div>
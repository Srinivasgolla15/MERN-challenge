<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-8">

      <h3 class="mb-3"><%= listing.title %></h3>

      <div class="card shadow rounded-3 p-2">
        <img 
          src="<%= listing.image.url %>" 
          class="card-img-top rounded-3  " 
          style="height: 25rem; object-fit: cover;" 
          alt="listing image"
        >
         
             <div class="card-body p-4">
          <h5 class="card-title"><%= listing.title %></h5>

          <p class="card-text">
            <%= listing.description %>
          </p>

          <p class="text-muted mb-1">
            <%= listing.location %>, <%= listing.country %>
          </p>

          <p class="fw-bold fs-5">
            â‚¹ <%= listing.price.toLocaleString("en-IN") %>
          </p>
       
        </div>
       
      </div>

      <div class="d-flex gap-3 mt-3 mb-3">
        <form method="GET" action="/listings/<%= listing._id %>/edit">
          <button class="btn btn-danger">Edit</button>
        </form>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>

      <div class="cols-8  mb-3">
        <hr/>
        <h4> Leave a Review</h4>
        <form>
          <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"/>
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="10" class="form-control"></textarea>
          </div>
          <button type="submit" class="btn btn-outline-dark">submit</button>
        </form>
      </div>

    </div>
  </div>
</div>

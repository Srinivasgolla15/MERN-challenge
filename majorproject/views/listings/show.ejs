<% layout("/layouts/boilerplate") %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-8">

        <!-- Listing Details -->
        <h3 class="mb-3">
          <%= listing.title %>
        </h3>

        <div class="card shadow rounded-3 p-2 mb-4">
          <img src="<%= listing.image.url %>" class="card-img-top rounded-3" style="height: 25rem; object-fit: cover;"
            alt="listing image">
          <div class="card-body p-4">
            <h5 class="card-title">
              <%= listing.title %>
            </h5>
            <p class="card-text">
              <%= listing.owner.username %>
            </p>
            <p class="card-text">
              <%= listing.description %>
            </p>
            <p class="text-muted mb-1">
              <%= listing.location %>, <%= listing.country %>
            </p>
            <p class="fw-bold fs-5">â‚¹ <%= listing.price.toLocaleString("en-IN") %>
            </p>
          </div>
        </div>

        <!-- Edit/Delete Buttons for Listing -->
        <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
          <div class="d-flex gap-3 mb-4">
            <form method="GET" action="/listings/<%= listing._id %>/edit">
              <button class="btn btn-danger">Edit</button>
            </form>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-dark">Delete</button>
            </form>
          </div>
          <% } %>

            <% if(currentUser) { %>
              <!-- Leave a Review Form -->
              <div class="mb-5">
                <hr />
                <h4>Leave a Review</h4>
                <form method="POST" action="/listings/<%= listing._id %>/reviews" class="needs-validation">

                  <!-- Star Rating using your starability-slot -->
                  <fieldset class="starability-slot">
                    <legend class="form-label rating-legend">Rating:</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                      aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>

                  <!-- Comment -->
                  <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment:</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                      required></textarea>
                    <div class="invalid-feedback">Please add a comment.</div>
                  </div>

                  <button type="submit" class="btn btn-outline-dark">Submit</button>
                </form>
              </div>
              <% } %>

                <!-- Display Reviews -->
                <div class="mb-5">
                  <hr />
                  <h4>All Reviews</h4>

                  <% if (listing.reviews && listing.reviews.length> 0) { %>
                    <div class="list-group">

                      <% listing.reviews.forEach(review=> { %>
                        <div class="list-group-item mb-3 shadow-sm rounded p-3">

                          <!-- Top Row: Author + Date + Delete Button -->
                          <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                              <div class="fw-bold">
                                <%= review.author.username %>
                              </div>
                              <small class="text-muted">
                                <%= review.createdAt ? new Date(review.createdAt).toLocaleDateString("en-IN", {
                                  day: "numeric" , month: "short" , year: "numeric" }) : "" %>
                              </small>
                            </div>

                            <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                              <form method="POST"
                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-sm btn-outline-danger ms-2">
                                  <i class="fa-solid fa-trash"></i>
                                </button>
                              </form>
                              <% } %>
                          </div>

                          <!-- Comment -->
                          <p class="mb-2">
                            <%= review.comment %>
                          </p>

                          <!-- Display Stars (small) -->
                          <div class="mb-2">
                            <% for(let i=1; i<=5; i++) { %>
                              <% if(i <=review.rating) { %>
                                <i class="fa-solid fa-star text-warning small-star"></i>
                                <% } else { %>
                                  <i class="fa-regular fa-star text-warning small-star"></i>
                                  <% } %>
                                    <% } %>
                          </div>

                        </div>
                        <% }) %>

                    </div>
                    <% } else { %>
                      <p class="text-muted">No reviews yet. Be the first!</p>
                      <% } %>

                </div>

      </div>
    </div>
  </div>

  <style>
    /* Star sizes */
    .small-star {
      font-size: 0.9rem;
      /* smaller stars for review cards */

    }

    .rating-legend {
      font-size: 1.2rem;
      /* same as .form-label */
      font-weight: 400;
      /* normal like comment label */
      margin-bottom: 0.25rem;
      /* adjust spacing */
    }

    /* Star rating input size */
    .starability-basic label {
      font-size: 1.2rem;
    }
  </style>
<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h1>Login on WayPoint</h1>
            <form method="POST" action="/login" novalidate class="needs-validation">
                <div class="mt-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Please Enter the Username.
                    </div>
                </div>


                <div class="mt-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" type="password" class="form-control" required>
                    <div class="invalid-feedback">
                        Please Enter the Password.
                    </div>

                    <div class="mt-4 d-flex justify-content-between mb-4">
                <button class="btn btn-dark" type="submit">Login</button>
                <a href="/signup" class="btn btn-outline-dark">Don't have an account? Sign Up</a>
            </div>
                </div>
            </form>

        </div>

    </div>